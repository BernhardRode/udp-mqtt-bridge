{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "iot:Publish",
        "iot:Receive",
        "iot:PublishRetain"
      ],
      "Resource": [
        "arn:aws:iot:eu-central-1:236951204728:topic/in",
        "arn:aws:iot:eu-central-1:236951204728:topic/out"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Subscribe"
      ],
      "Resource": [
        "arn:aws:iot:eu-central-1:236951204728:topicfilter/in",
        "arn:aws:iot:eu-central-1:236951204728:topicfilter/out"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Connect"
      ],
      "Resource": [
        "arn:aws:iot:eu-central-1:236951204728:client/*"
      ]
    }
  ]
}